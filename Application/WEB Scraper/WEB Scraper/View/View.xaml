<Window
    x:Class="WEB_Scraper.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WEB_Scraper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WEB SCRAPER"
    Width="529"
    Height="450"
    mc:Ignorable="d">

    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>

    <Grid>
        <TextBox
            x:Name="URL"
            Width="250"
            Height="23"
            Margin="25,92,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding URL}"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="Command"
            Width="250"
            Height="23"
            Margin="25,175,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding Command}"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="Path"
            Width="250"
            Height="23"
            Margin="25,250,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding PathToFile}"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="Depth"
            Width="70"
            Height="23"
            Margin="25,317,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding Depth}"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="Extan"
            Width="52"
            Height="23"
            Margin="298,251,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding Extеnsion}"
            TextWrapping="Wrap" />
        <TextBlock
            x:Name="label"
            Width="145"
            Margin="25,76,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="URL" />
        <TextBlock
            x:Name="label1"
            Width="250"
            Margin="25,154,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="CSS Selector or XPath command" />
        <TextBlock
            x:Name="label2"
            Width="145"
            Margin="25,229,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Path to starage directory" />
        <TextBlock
            x:Name="label3"
            Width="145"
            Margin="25,296,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Scrape depth" />
        <Label
            x:Name="label4"
            Margin="280,247,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="." />
        <Button
            x:Name="button"
            Width="155"
            Height="55"
            Margin="295,305,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding StartScarpe}"
            Content="Start scraping" />






    </Grid>
</Window>
